<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_navigation_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5" >

    <LinearLayout
        android:id="@+id/home_tab_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/tab_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/timer_tab_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/timer_tab_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_tab_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/tab_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/run_tab_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/run_tab_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_tab_awards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/tab_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/awards_tab_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/awards_tab_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_tab_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/tab_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gallery_tab_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/gallery_tab_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_tab_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:background="@drawable/tab_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/more_tab_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/more_tab_background" />
    </LinearLayout>

</LinearLayout>